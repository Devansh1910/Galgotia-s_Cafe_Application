<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/box"
    android:layout_width="match_parent"
    android:layout_height="120sp"
    android:layout_marginHorizontal="10sp"
    android:layout_marginVertical="10sp"
    app:cardCornerRadius="20sp"
    tools:layout_editor_absoluteX="10dp"
    tools:layout_editor_absoluteY="16dp">

    <TextView
        android:id="@+id/menu01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:text="Samosa (1 Pc)"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/box"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/addcart"
            android:layout_width="100sp"
            android:layout_height="40sp"
            android:background="@drawable/addcart01"
            android:text="ADD TO CART"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.982"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageView
        android:id="@+id/rate"
        android:layout_width="90sp"
        android:layout_height="25sp"
        android:layout_marginStart="10sp"
        android:layout_marginTop="35sp"
        android:src="@drawable/rate" />

    <ImageView
        android:id="@+id/veg"
        android:layout_width="20sp"
        android:layout_height="20sp"
        android:layout_marginStart="100sp"
        android:layout_marginTop="37sp"
        android:src="@drawable/veg" />

    <TextView
        android:id="@+id/cost"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_marginStart="15sp"
        android:layout_marginTop="60sp"
        android:text="â‚¹17"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12sp"
        android:layout_marginTop="80sp"
        android:text="Mashed Aloo Matar Samosa Deep Fried In Desi Ghee Served With Chutney And Saunth"
        android:textStyle="bold" />

</androidx.cardview.widget.CardView>